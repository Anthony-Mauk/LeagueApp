                @Html.DisplayNameFor(model => model.CoachCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerCount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CoachCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlayerCount)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TeamId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TeamId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TeamId })
                </td>
            </tr>
        }

    </table>
